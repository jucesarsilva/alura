{
  "compilerOptions": {
    "baseUrl": "app/",
    "outDir": "public/js",
    "module": "es6",
    "target": "es5",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noEmitOnError": true,
    "removeComments": true,
    "strictNullChecks": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "paths": {
      "@controllers/*": ["controllers/*"],
      "@models/*": ["models/*"],
      "@views/*": ["views/*"],
      "@enums/*": ["enums/*"],
      "@decorators/*": ["decorators/*"],
      "@services/*": ["services/*"],
      "@utils/*": ["utils/*"],
      "@interfaces/*": ["interfaces/*"],
    }
  },
  "tsc-alias": {
    "resolveFullPaths": true
  },
  "include": ["app/**/*"]
}
